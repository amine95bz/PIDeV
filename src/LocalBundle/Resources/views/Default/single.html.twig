                                <i style="color: gold" class="fa fa-star fa-2x" aria-hidden="true"></i>
                                <i style="color: gold" class="fa fa-star fa-2x" aria-hidden="true"></i>
                                <i style="color: gold" class="fa fa-star fa-2x" aria-hidden="true"></i>
                                <i style="color: gold" class="fa fa-star fa-2x" aria-hidden="true"></i>
                                <i style="color: gold" class="fa fa-star fa-2x" aria-hidden="true"></i>

                            {% endif %}
                        {% endif %}

                        {% if annonce.owner != app.user.username %}
                            <a href="{{ path('Reclamation_homepage',{'nom':annonce.owner }) }}" data-text="Add to chart" class="my-cart-b">Reclamer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

            </div>
        </div>
    </div>




{%  endblock %}